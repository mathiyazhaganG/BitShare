<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bitshare - Secure File Sharing</title>
  <style>
    :root {
      --primary: #3a86ff;
      --primary-dark: #2667cc;
      --secondary: #8338ec;
      --success: #06d6a0;
      --warning: #ffbe0b;
      --danger: #ef476f;
      --dark: #1a1a2e;
      --light: #f8f9fa;
      --gray: #e9ecef;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    body {
      background-color: var(--light);
      color: var(--dark);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    
    .container {
      width: 90%;
      max-width: 600px;
      padding: 2rem;
      background: white;
      border-radius: 12px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }
    
    header {
      text-align: center;
      margin-bottom: 2rem;
    }
    
    .logo {
      font-size: 2.5rem;
      font-weight: 800;
      color: var(--primary);
      letter-spacing: -1px;
      margin-bottom: 0.5rem;
    }
    
    .tagline {
      font-size: 1rem;
      color: #666;
      margin-bottom: 2rem;
    }
    
    .success-message {
      background-color: rgba(6, 214, 160, 0.1);
      border-left: 4px solid var(--success);
      padding: 1rem;
      margin-bottom: 2rem;
      border-radius: 4px;
    }
    
    .success-message h2 {
      color: var(--success);
      font-size: 1.2rem;
      margin-bottom: 0.5rem;
    }
    
    .file-link {
      display: block;
      padding: 1rem;
      background-color: var(--gray);
      border-radius: 4px;
      margin-top: 1rem;
      font-size: 0.9rem;
      word-break: break-all;
      color: var(--dark);
      text-decoration: none;
      transition: background 0.3s;
    }
    
    .file-link:hover {
      background-color: #dee2e6;
    }
    
    .copy-button {
      background-color: var(--primary);
      color: white;
      border: none;
      border-radius: 4px;
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
      cursor: pointer;
      margin-top: 0.5rem;
      transition: background 0.3s;
    }
    
    .copy-button:hover {
      background-color: var(--primary-dark);
    }
    
    .upload-form {
      display: flex;
      flex-direction: column;
    }
    
    .form-group {
      margin-bottom: 1.5rem;
    }
    
    label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 600;
    }
    
    .file-input-container {
      position: relative;
      height: 150px;
      border: 2px dashed #ccc;
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      cursor: pointer;
      transition: all 0.3s;
      overflow: hidden;
    }
    
    .file-input-container:hover {
      border-color: var(--primary);
      background-color: rgba(58, 134, 255, 0.05);
    }
    
    .file-input-container.has-file {
      border-color: var(--success);
      background-color: rgba(6, 214, 160, 0.05);
    }
    
    .file-input-icon {
      font-size: 2rem;
      color: #ccc;
      margin-bottom: 0.5rem;
    }
    
    .file-input-text {
      font-size: 0.9rem;
      color: #666;
    }
    
    .file-input {
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      opacity: 0;
      cursor: pointer;
    }
    
    .file-name {
      font-size: 0.9rem;
      margin-top: 0.5rem;
      color: var(--success);
      display: none;
    }
    
    .password-input {
      width: 100%;
      padding: 0.8rem 1rem;
      border: 1px solid #ccc;
      border-radius: 4px;
      font-size: 1rem;
      transition: border 0.3s;
    }
    
    .password-input:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(58, 134, 255, 0.25);
    }
    
    .password-strength {
      height: 4px;
      width: 100%;
      background: #eee;
      margin-top: 0.5rem;
      border-radius: 2px;
      overflow: hidden;
    }
    
    .password-strength-meter {
      height: 100%;
      width: 0%;
      transition: width 0.3s, background 0.3s;
    }
    
    .password-helper {
      font-size: 0.8rem;
      margin-top: 0.5rem;
      color: #666;
    }
    
    .submit-btn {
      background: linear-gradient(45deg, var(--primary), var(--secondary));
      color: white;
      border: none;
      border-radius: 4px;
      padding: 0.8rem;
      font-size: 1rem;
      cursor: pointer;
      transition: transform 0.3s, box-shadow 0.3s;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    .submit-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
    }
    
    .submit-btn:active {
      transform: translateY(0);
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    
    .submit-btn:disabled {
      background: #ccc;
      cursor: not-allowed;
      transform: none;
      box-shadow: none;
    }
    
    footer {
      margin-top: 2rem;
      text-align: center;
      font-size: 0.8rem;
      color: #666;
    }
    
    .security-badge {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-top: 0.5rem;
      font-size: 0.8rem;
      color: var(--success);
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <h1 class="logo">Bitshare</h1>
      <p class="tagline">Simple, secure file sharing</p>
    </header>
    
    <% if(locals.filelink!=null){ %>
    <div class="success-message">
      <h2>Your file is uploaded successfully!</h2>
      <p>Share the link below to allow others to download your file:</p>
      <a href="/file/<%= locals.fileId %>" class="file-link"><%= locals.filelink %></a>
      <div class="security-badge">
        <% if(locals.hasPassword){ %>
          üîí Password protected
        <% } else { %>
          üîì No password protection
        <% } %>
      </div>
      <button class="copy-button" onclick="copyToClipboard()">Copy Link</button>
    </div>
    <% } %>
    
    <form action="/upload" method="post" enctype="multipart/form-data" class="upload-form">
      <div class="form-group">
        <label for="file">Upload File</label>
        <div class="file-input-container" id="fileInputContainer">
          <span class="file-input-icon">üìÅ</span>
          <span class="file-input-text">Drag & drop your file here or click to browse</span>
          <span class="file-name" id="fileName"></span>
          <input type="file" id="file" name="file" class="file-input" required>
        </div>
      </div>
      
      <div class="form-group">
        <label for="password">Password Protection (Optional)</label>
        <input type="password" id="password" name="password" class="password-input" placeholder="Enter a password to protect your file">
        <div class="password-strength">
          <div class="password-strength-meter" id="passwordStrength"></div>
        </div>
        <p class="password-helper">Leave empty for no password protection</p>
      </div>
      
      <button type="submit" id="upload" class="submit-btn">Upload & Share</button>
    </form>
    
    <footer>
      <p>¬© 2025 Bitshare - Secure file sharing service</p>
    </footer>
  </div>
  
  <script>
    // Handle file input visualization
    const fileInput = document.getElementById('file');
    const fileInputContainer = document.getElementById('fileInputContainer');
    const fileName = document.getElementById('fileName');
    
    fileInput.addEventListener('change', function() {
      if (this.files.length > 0) {
        fileInputContainer.classList.add('has-file');
        fileName.style.display = 'block';
        fileName.textContent = this.files[0].name;
        document.querySelector('.file-input-text').textContent = 'File selected';
        document.querySelector('.file-input-icon').textContent = '‚úì';
      } else {
        fileInputContainer.classList.remove('has-file');
        fileName.style.display = 'none';
        document.querySelector('.file-input-text').textContent = 'Drag & drop your file here or click to browse';
        document.querySelector('.file-input-icon').textContent = 'üìÅ';
      }
    });
    
    // Password strength meter
    const passwordInput = document.getElementById('password');
    const passwordStrength = document.getElementById('passwordStrength');
    
    passwordInput.addEventListener('input', function() {
      const password = this.value;
      let strength = 0;
      
      if (password.length > 0) {
        // Length check
        if (password.length >= 8) strength += 25;
        
        // Contains lowercase letters
        if (/[a-z]/.test(password)) strength += 25;
        
        // Contains uppercase letters
        if (/[A-Z]/.test(password)) strength += 25;
        
        // Contains numbers or special characters
        if (/[0-9!@#$%^&*(),.?":{}|<>]/.test(password)) strength += 25;
      }
      
      passwordStrength.style.width = strength + '%';
      
      if (strength <= 25) {
        passwordStrength.style.background = '#ef476f';
      } else if (strength <= 50) {
        passwordStrength.style.background = '#ffbe0b';
      } else if (strength <= 75) {
        passwordStrength.style.background = '#118ab2';
      } else {
        passwordStrength.style.background = '#06d6a0';
      }
    });
    
    // Copy link to clipboard
    function copyToClipboard() {
      const fileLink = document.querySelector('.file-link');
      const el = document.createElement('textarea');
      el.value = fileLink.href;
      document.body.appendChild(el);
      el.select();
      document.execCommand('copy');
      document.body.removeChild(el);
      
      const copyButton = document.querySelector('.copy-button');
      copyButton.textContent = 'Copied!';
      setTimeout(() => {
        copyButton.textContent = 'Copy Link';
      }, 2000);
    }
  </script>
</body>
</html>